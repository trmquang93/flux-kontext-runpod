# FLUX.1 Kontext-dev Server Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
SERVER_MODE=runpod  # Options: runpod, fastapi, debug

# CUDA Configuration
CUDA_VISIBLE_DEVICES=0
FORCE_CUDA=1

# HuggingFace Configuration
HF_TOKEN=your_huggingface_token_here  # Optional but recommended for private models
HF_HUB_ENABLE_HF_TRANSFER=1
HF_HUB_DISABLE_PROGRESS_BARS=1

# Model Cache Paths (RunPod network volume)
TORCH_HOME=/runpod-volume/.torch
HF_HOME=/runpod-volume/.huggingface
TRANSFORMERS_CACHE=/runpod-volume/.transformers

# Model Configuration
MODEL_ID=black-forest-labs/FLUX.1-Kontext-dev
DEFAULT_GUIDANCE_SCALE=2.5
DEFAULT_NUM_INFERENCE_STEPS=50
DEFAULT_HEIGHT=1024
DEFAULT_WIDTH=1024

# Performance Configuration
TORCH_CUDA_ARCH_LIST="8.9;9.0"
ENABLE_ATTENTION_SLICING=true
ENABLE_XFORMERS=true
ENABLE_CPU_OFFLOAD=true

# Logging Configuration
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR

# RunPod Specific
RUNPOD_ENDPOINT_ID=your_endpoint_id_here
RUNPOD_API_KEY=your_runpod_api_key_here