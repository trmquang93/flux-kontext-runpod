# Simplified FLUX.1 ControlNet Dockerfile for RunPod
# Based on proven working patterns from Qwen server

FROM pytorch/pytorch:2.1.0-cuda11.8-cudnn8-runtime

WORKDIR /app

# Environment variables
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1
ENV RUNPOD_MODE=true
ENV HF_HUB_DISABLE_PROGRESS_BARS=1
ENV CUDA_VISIBLE_DEVICES=0

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git \
    wget \
    curl \
    libgl1-mesa-glx \
    libglib2.0-0 \
    libsm6 \
    libxext6 \
    libxrender-dev \
    libgomp1 \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Install Python dependencies with proven versions
RUN pip install --upgrade pip && \
    pip cache purge && \
    pip install --no-cache-dir \
    runpod==1.7.2 \
    torch==2.1.0 \
    torchvision \
    transformers>=4.35.0 \
    diffusers>=0.25.0 \
    accelerate>=0.24.0 \
    safetensors \
    xformers \
    opencv-python-headless \
    pillow \
    numpy

# Validate critical imports
RUN python -c "import torch; print(f'PyTorch: {torch.__version__}, CUDA: {torch.cuda.is_available()}')" && \
    python -c "import runpod; import runpod.serverless; print('RunPod serverless: OK')" && \
    python -c "import diffusers; print(f'Diffusers: {diffusers.__version__}')" && \
    python -c "import cv2; print(f'OpenCV: {cv2.__version__}')"

# Copy application code
COPY . .

# Simple entrypoint - just run the handler directly
CMD ["python", "-u", "runpod_handler.py"]